@model AppUserLoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>


<head>

<title>TrustBank - Giriş</title>


<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta name="keywords" content="TrustBank, TrustBank Login, TrustBank Giriş, TrustBank Giriş Yap">
<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

<link href="~/register/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />

 <link rel="stylesheet" href="~/register/css/style.css" type="text/css" media="all">


<link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">


</head>

<body>

	<h1>TRUSTBANK</h1>

	<div class="w3layoutscontaineragileits">
	<h2>Giriş Paneli</h2>
		<form method="post">
		
			<input asp-for="UserName" placeholder="Kullanıcı adınız"  type="text" required>
			<span asp-validation-for="UserName"></span>

			<input asp-for="Password" placeholder="Şifreniz"  type="password" required>
			<span asp-validation-for="Password"></span>
	
		<ul class="agileinfotickwthree">
				<li>
					<input type="checkbox" id="brand1" asp-for="RememberMe">
					<label for="brand1"><span></span>Beni hatırla</label>
					<a href="#">Şifremi unuttum</a>
				</li>
			</ul>
		<div class="aitssendbuttonw3ls">
				<input type="submit" value="GİRİŞ YAP">
				<p> Hesabın yok mu? <span>→</span> <a class="w3_play_icon1" href="#"> Kayıt Ol</a></p>
				<div class="clear"></div>
			</div>
			<br /><br />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	</form>
	
	</div>

	<div class="w3footeragile">
		<p> &copy; @DateTime.Now.Year TrustBank. All Rights Reserved | Design by <a href="http://w3layouts.com" target="_blank">W3layouts</a></p>
	</div>

	
	<script type="text/javascript" src="~/register/js/jquery-2.1.4.min.js"></script>


		<script src="~/register/js/jquery.magnific-popup.js" type="text/javascript"></script>

	<script>
		$(document).ready(function() {
		$('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
			type: 'inline',
			fixedContentPos: false,
			fixedBgPos: true,
			overflowY: 'auto',
			closeBtnInside: true,
			preloader: false,
			midClick: true,
			removalDelay: 300,
			mainClass: 'my-mfp-zoom-in'
		});
																		
		});
	</script>

</body>

</html>